{% extends 'base.html.twig' %}

{% set titleString = 'Import sets for' ~ playerTag %}

{% block title %}{{titleString}}{% endblock %}

{% block body %}
<section id="ImportSets">
    <h2>{{titleString}}</h2>

    <form class="d-grid" action="{{action}}" method="post">
        <input type="hidden" name="playerId" value="{{playerId}}">
        <div>
            {% for eventData in eventInfos %}
            <h3 class="d-flex-row">
                <input type="checkbox" id="eventIds_{{ eventData.eventId }}" name="eventIds[]"
                    value="{{ eventData.eventId }}">
                <label for="eventIds_{{ eventData.eventId }}" class="row-label">
                    {{ eventData.tournamentName }} {{eventData.eventName }}
                </label>
            </h3>
            <div class="set-container">
                {% for sets in eventData.sets %}
                <div>{{sets.set.displayScore}}</div>
                {% endfor %}
            </div>
            {% endfor %}
        </div>
        <button type="submit" id="go" name="go">Import Sets</button>
    </form>
</section>
{% endblock %}